{
  "name": "dockploy-pro-dashboard",
  "version": "1.0.0",
  "description": "Modern Docker Container Management Dashboard with Beautiful Glassmorphism UI",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t dockploy-dashboard .",
    "docker:run": "docker run -p 3000:3000 -v /var/run/docker.sock:/var/run/docker.sock:ro dockploy-dashboard",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "dockerode": "^3.3.5",
    "lucide-react": "^0.263.1",
    "recharts": "^2.8.0",
    "ws": "^8.14.2",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "tailwind-merge": "^2.2.0",
    "framer-motion": "^10.16.16",
    "jose": "^5.1.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.5.10",
    "@types/dockerode": "^3.3.23",
    "@types/lodash": "^4.14.202",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.6",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndersPier/dockploy-pro-dashboard.git"
  },
  "keywords": [
    "docker",
    "container",
    "management",
    "dashboard",
    "monitoring",
    "nextjs",
    "react",
    "typescript",
    "glassmorphism",
    "realtime"
  ],
  "author": {
    "name": "Anders Lehmann Pier",
    "email": "anders@pier.dk",
    "url": "https://github.com/AndersPier"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AndersPier/dockploy-pro-dashboard/issues"
  },
  "homepage": "https://github.com/AndersPier/dockploy-pro-dashboard#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}